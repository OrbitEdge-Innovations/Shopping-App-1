<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/DarkBlueGreen" /> <!-- Slightly darker when pressed -->
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="@color/DarkBlueGreen" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>